{
    "compileOnSave": false,
    "compilerOptions": {
        "resolveJsonModule": false,
        "target": "es2020",
        "jsx": "react",
        "module": "nodenext",
        "outDir": "dist",
        "esModuleInterop": true,
        "sourceMap": true,
        "types": ["youtube"],
        "moduleResolution": "nodenext"
    },
    "include": [
        "./src/**/*.ts*"
    ],
    "exclude": [
        "client",
        "dist",
        "node_modules",
        "**/*.spec.ts",
        "*.json",
        "./src/logs/*"
    ]
}
